<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/font.color.light</item>
        <item name="actionMenuTextColor">@color/font.color.light</item>
        <item name="android:textColorSecondary">@color/font.color.light</item>
    </style>

</resources>
