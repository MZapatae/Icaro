<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dip"
    android:layout_height="250dip"
    android:background="@color/background_cardView"
    tools:context="cl.mzapatae.icaro.Activities.AboutMe">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="15dip">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="75dip"
            android:layout_height="75dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/about_appContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/about_appName"
            android:layout_toEndOf="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:text="Asistente de Voz"
            android:textSize="17dip" />

        <TextView
            android:id="@+id/about_appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/about_appContent"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/about_appContent"
            android:layout_toRightOf="@+id/imageView"
            android:gravity="center_horizontal"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textSize="33dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/about_developedBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="Desarrollado por"
        android:textAlignment="center"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/t_NombreDesarrollador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/about_developedBy"
        android:gravity="center"
        android:text="Miguel A. Zapata"
        android:textSize="19dp"
        android:textStyle="bold"
        android:typeface="normal" />


    <TextView
        android:id="@+id/t_Version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:text="@string/app.buildName"
        android:textAlignment="center"
        android:textSize="11dp" />

</RelativeLayout>
