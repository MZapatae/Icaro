<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_clock"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="cl.mzapatae.icaro.Features.Clock">


    <TextView
        android:id="@+id/clock_twice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text=":"
        android:textColor="@color/primaryDark"
        android:textSize="70sp" />

    <TextView
        android:id="@+id/clock_minutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/clock_twice"
        android:layout_toEndOf="@+id/clock_twice"
        android:layout_toRightOf="@+id/clock_twice"
        android:text="46"
        android:textColor="@color/primary"
        android:textSize="80sp" />

    <TextView
        android:id="@+id/clock_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/clock_twice"
        android:layout_toStartOf="@+id/clock_twice"
        android:text="12"
        android:textColor="@color/primaryDark2"
        android:textSize="95sp" />

    <TextView
        android:id="@+id/clock_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Chile"
        android:textColor="@color/primaryDark"
        android:textSize="19sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/clock_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/clock_country"
        android:layout_centerHorizontal="true"
        android:text="Santiago"
        android:textColor="@color/primary"
        android:textSize="22sp"
        android:visibility="invisible" />
</RelativeLayout>
